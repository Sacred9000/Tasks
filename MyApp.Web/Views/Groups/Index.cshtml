@model MyApp.Web.Models.GroupIndexViewModel

<h2>Groups</h2>

<p><strong>Total Groups:</strong> @Model.TotalGroupCount</p>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var group in Model.Groups)
    {
        <tr>
            <td>@group.Id</td>
            <td>@group.Name</td>
            <td>@group.Description</td>
            <td>
                <a asp-action="AddMember" asp-route-groupId="@group.Id" class="btn btn-sm btn-primary">>Add Member</a> |
                <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<h3>User Count per Group</h3>
<table class="table">
    <thead>
        <tr>
            <th>Group</th>
            <th>User Count</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var g in Model.UsersCountPerGroup)
    {
        <tr>
            <td>@g.GroupName</td>
            <td>@g.UserCount</td>
        </tr>
    }
    </tbody>
</table>
